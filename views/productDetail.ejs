<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Detalle de Producto</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <header>
       <%-include('partials/header.ejs')%> 
    </header>
    
    <h1><%= product.name %></h1>
    <div>
      <img style="width:50%;" src="/img/products/<%= product.image %>" alt="">
        <div>
            <h2><%= product.price %></h2>
            <p><%= product.description %></p>
        </div>
        <div>
            <a href="/products/edit/<%= product.id %>" type="button" class="btn btn-outline-primary">Editar</a>
            <form action="/products/delete/<%= product.id %>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-outline-danger">Eliminar</button>
            </form>
        </div>
    </div>
  
    <%-include('partials/footer.ejs')%>
  </body>
</html>