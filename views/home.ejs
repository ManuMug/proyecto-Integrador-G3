<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WOOF!</title>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="icon" href="/img/LogoCircular32x32.png">
</head>
<body>
    <header>
      <%-include('partials/header.ejs')%>
    </header>
  
    <section class="banner">
      <img src="/img/Banner Home 2.jpg" alt="Banner Woof!">
    </section>
    <main>
      <section>

        <div style="display: flex;align-content: space-around;flex-direction: row;flex-wrap: nowrap;justify-content: space-between;align-items: center;    margin: 5px;">
          <h1>Productos:</h1>
          <a href="/products" class="ashe"><h1>Ver todos!</h1></a>
        </div>
        
        <div class="products-container">
          <% products.forEach(product => { %>
          <a href="/products/detail/<%= product.idProduct %>" class="qsyo">
          <article>
            <img src="/img/products/<%= product.image %>" alt="">
            <div class="product-card">
              <i class="fas fa-truck"></i>
              <div class="flex-row">
                <p class="price">$<%= product.price %></p>
                <p class="discount"><%= product.discount %>% OFF</p>
              </div>
              <h3 class="description" style="color: #5c5c5c;" ><%= product.name %></h3>
              <h3 class="description" style="color: #5c5c5c;" ><%= product.category %> </h3>
            </div>
          </article>
        </a>
          <% }) %>
        </div>
      </section>
    </main>
    <section class="banner">
      <img src="/img/Banner footer 2.jpg" alt="BSobre Nosotros!">
    </section>
    <footer>
      <%-include('partials/footer.ejs')%>
    </footer>
  </body>
</html>