<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WOOF!</title>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="icon" href="/img/LogoCircular32x32.png">
</head>
<body>
    <header>
      <%-include('partials/header.ejs')%>
    </header>
  
    <section class="banner">
      <img src="/img/banner.jpeg" alt="Banner Woof!">
    </section>
    <main>
      <section>
        <h2>Productos:</h2>
        <div class="products-container">
          <% products.forEach(product => { %>
          <article>
            <img src="/img/products/<%= product.image %>" alt="">
            <div class="product-card">
              <i class="fas fa-truck"></i>
              <div class="flex-row">
                <p class="price">$<%= product.price %></p>
                <p class="discount"><%= product.discount %>%</p>
              </div>
              <h3 class="description"><%= product.name %></h3>
            </div>
          </article>
          <% }) %>
        </div>
      </section>
    </main>
    <section class="banner">
      <img src="/img/Slide-Sobre-Nosotros.png" alt="BSobre Nosotros!">
    </section>
    <footer>
      <%-include('partials/footer.ejs')%>
    </footer>
  </body>
</html>