<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Detalle de <%= products.name %></title>
  <link rel="stylesheet" href="/css/Register.css">
  <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> -->
  <link rel="icon" href="/img/LogoCircular32x32.png">
  
</head>
<body>
    <header>
       <%-include('../partials/header.ejs')%> 
    </header>
    
    <h1>Producto: <%= products.name %></h1>
    <div>
      <img style="width:40%;" src="/img/products/<%= products.image %>" alt="">
        <div>
            <h2>Precio: $<%= products.price %></h2><br>
            <p> Descripcion: <%= products.description %></p><br>
        </div>
        <div style="display: flex;flex-direction: row;align-content: space-between;justify-content: flex-start;align-items: flex-start;">
          <a href="/products/edit/<%= products.idProduct %>" type="button" class="btn btn-outline-primary" style="margin-right:5px;">Editar</a><br><br>
          <form action="/products/delete/?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-outline-danger">Eliminar</button>
          </form>
      </div>
    </div>
  
    <%-include('../partials/footer.ejs')%>
  </body>
</html>