<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WOOF! Productos!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/Register.css">
    <link rel="icon" href="/img/Fondo.png">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
rel="stylesheet" />
</head>
<body>
    <header>
        <%-include('../partials/header.ejs')%>
    </header>
   
    <h1 class="text-center p-5">NUESTROS PRODUCTOS:</h1>
    <div class="container">
        <div class="row">

            <% products.forEach(product => { %>
                <div class="col">                    
                    <div class="card" style="width: 18rem;">
                      <img src="/img/products/<%= product.image %>" class="card-img-top" alt="...">
                      <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text">Precio $<%= product.price %></p>
                        <a href="/products/detail/<%= product.id %> " class="btn btn-primary">Descripci√≥n</a>
                      </div>
                    </div>
                </div>
                <% }) %>                
            </div>
    </div>
    <footer>
        <%-include('../partials/footer.ejs')%>
    </footer>
</body>
</html>